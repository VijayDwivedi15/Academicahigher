<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link href="~/Areas/Admin/admin.css" rel="stylesheet" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" type="image/x-icon" href="~/Design/image.png">

    <title>ACADÈMICA,Bilaspur</title>
</head>


<!------ Include the above in your HEAD tag ---------->
<body>
    @Html.AntiForgeryToken()
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        <button class="navbar-toggler navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav navbar-sidenav">
                <a class="nav-link navlogo text-center" href="#">

                    <img src="~/Design/image.png" style="margin-left:-20px;" />
                </a>


                <li class="nav-item">
                    <a class="nav-link sidefrst" href="@Url.Action("AddFaculty", "Admin", new { area="Admin"})">
                        <span class="textside">Add Faculties</span>
                    </a>
                </li>


                <li class="nav-item">
                    <a class="nav-link sidesecnd" href="@Url.Action("AllFaculty", "Admin", new { area="Admin"})">
                        <span class="textside">All Faculty List</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link sidesthrd" href="@Url.Action("AddGallery", "Admin", new { area = "Admin" })">
                        <span class="textside">Add Gallery</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link sidesthrd" href="@Url.Action("AllImages", "Admin", new { area = "Admin" })">
                        <span class="textside">All Images</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link sidesthrd" href="@Url.Action("Notification", "Admin", new { area = "Admin" })">
                        <span class="textside">Add Notification</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link sidesthrd" href="@Url.Action("AllContacts", "Admin", new { area = "Admin" })">
                        <span class="textside">User Contacts</span>
                    </a>
                </li>

            </ul>


        </div>
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" onclick="LogoutFun()">Logout</a>


    </nav>

    <div class="content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <!-- Icon Cards-->


                <div class="col-lg-4 col-md-4 col-sm-6 col-12 mb-2 mt-4">
                    <a href="@Url.Action("AllFaculty", "Admin", new { area="Admin"})">
                        <div class="inforide">
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-4 col-4 rideone">
                                    <img src="~/Design/image.png" />

                                </div>
                                <div class="col-lg-9 col-md-8 col-sm-8 col-8 fontsty">
                                    <h4>Total Faculties</h4>

                                    @if (@ViewBag.totalFaculty != null)
                                    {
                                        <h2>@ViewBag.totalFaculty</h2>
                                    }
                                    else
                                    {
                                        <h2>0</h2>
                                    }

                                </div>
                            </div>
                        </div>
                    </a>
                </div>


                <div class="col-lg-4 col-md-4 col-sm-6 col-12 mb-2 mt-4">
                    <a href="@Url.Action("AllImages", "Admin", new { area = "Admin" })">
                        <div class="inforide">
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-4 col-4 ridetwo">
                                    <img src="~/Design/image.png" />
                                </div>
                                <div class="col-lg-9 col-md-8 col-sm-8 col-8 fontsty">
                                    <h4>Gallery</h4>
                                    @if (@ViewBag.totalImages != null)
                                    {
                                        <h2>@ViewBag.totalImages</h2>
                                    }
                                    else
                                    {
                                        <h2>0</h2>
                                    }

                                </div>
                            </div>
                        </div>
                    </a>
                </div>


                <div class="col-lg-4 col-md-4 col-sm-6 col-12 mb-2 mt-4">
                    <a href="@Url.Action("AllContacts", "Admin", new { area = "Admin" })">
                        <div class="inforide">
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-4 col-4 ridethree">
                                    <img src="~/Design/image.png" />
                                </div>
                                <div class="col-lg-9 col-md-8 col-sm-8 col-8 fontsty">
                                    <h4>New Contacts</h4>
                                    @if (@ViewBag.Contacts != null)
                                    {
                                        <h2>@ViewBag.Contacts</h2>
                                    }
                                    else
                                    {
                                        <h2>0</h2>
                                    }

                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>

            <img src="~/Design/images/adminback.jpg" style="height:380px;width:100%" />


        </div>
    </div>



</body>

</html>
@Html.Hidden("RedirectToLogin", Url.Action("Login", "Account", new { area = "" }))
<script src="~/Scripts/bootstrap.min.js"></script>
<script>

    function LogoutFun() {

        $.ajax({
            type: "POST",
            url: "/Admin/Admin/LogOff",
            data: {
                returnUrl: 'v'
            },
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function(data) {
                var url=$("#RedirectToLogin").val();
                location.href=url;
            },

        });
    }

</script>

